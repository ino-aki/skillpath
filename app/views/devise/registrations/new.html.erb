<div class="main">
  <div class="inner">
    <div class="form__wrapper">
      <h2 class="page-heading">ユーザー新規登録</h2>

      <% if @user.errors.any? %>
        <div class="error-messages">
          <ul>
            <% @user.errors.full_messages.each do |msg| %>
              <li><%= msg %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <%= form_with model: @user, url: user_registration_path, local: true do |f| %>

        <div class="field">
          <%= f.label :nickname do %>
            ニックネーム<span class="required">*</span>
          <% end %><br />
          <%= f.text_field :nickname, id:"user_name", autofocus: true %>
        </div>

        <div class="field">
          <%= f.label :email do %>
            メールアドレス<span class="required">*</span>
          <% end %><br />
          <%= f.email_field :email, id:"user_email", autocomplete: "email" %>
        </div>

        <div class="field">
          <%= f.label :password do %>
            パスワード（6文字以上）<span class="required">*</span>
          <% end %><br />
          <%= f.password_field :password, id:"user_password", autocomplete: "new-password" %>
        </div>

        <div class="field">
          <%= f.label :password_confirmation do %>
            パスワード再入力<span class="required">*</span>
          <% end %><br />
          <%= f.password_field :password_confirmation, id:"user_password_confirmation", autocomplete: "new-password" %>
        </div>

        <div class="field">
          <%= f.label :profile, "資格" %><br />
          <%= f.text_area :profile, placeholder: "取得した資格を入力してください", class: "form__text", id: "user_profile" %>
        </div>

        <div class="actions">
          <%= f.submit "新規登録", class: "form__btn" %>
        </div>
      <% end %>
    </div>
  </div>
</div>