<div class="main">
  <div class="inner">
    <div class="form__wrapper">
      <h2 class="page-heading">ユーザー新規登録</h2>

      <%= render 'shared/error_messages', object: @user %>

      <%= form_with model: @user, url: user_registration_path, local: true do |f| %>

        <div class="field">
          <%= f.label :nickname, "ニックネーム", class: "label-text" %><br />
          <%= f.text_field :nickname, id: "user_name", autofocus: true, class: "form__text" %>
        </div>

        <div class="field">
          <%= f.label :email, "メールアドレス", class: "label-text" %><br />
          <%= f.email_field :email, id: "user_email", autocomplete: "email", class: "form__text" %>
        </div>

        <div class="field">
          <%= f.label :password, "パスワード（6文字以上）", class: "label-text" %><br />
          <%= f.password_field :password, id: "user_password", autocomplete: "new-password", class: "form__text" %>
        </div>

        <div class="field">
          <%= f.label :password_confirmation, "パスワード再入力", class: "label-text" %><br />
          <%= f.password_field :password_confirmation, id: "user_password_confirmation", autocomplete: "new-password", class: "form__text" %>
        </div>

        <div class="field">
          <%= f.label :profile, "資格", class: "label-text optional" %><br />
          <%= f.text_area :profile, placeholder: "取得した資格を入力してください", class: "form__text", id: "user_profile" %>
        </div>

        <div class="actions">
          <%= f.submit "新規登録", class: "form__btn" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
