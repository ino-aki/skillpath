<div class="main">
  <div class="inner">
    <div class="form__wrapper">
      <h2 class="page-heading">プロフィール編集</h2>

      <%= render 'shared/error_messages', object: @user %>
      
      <%= form_with model: @user, local: true do |f| %>
        <div class="field">
          <%= f.label :nickname, "ニックネーム", class: "label-text" %><br />
          <%= f.text_field :nickname, class: "form__text" %>
        </div>

        <div class="field">
          <%= f.label :email, "メールアドレス", class: "label-text" %><br />
          <%= f.email_field :email, class: "form__text" %>
        </div>

        <div class="field">
          <%= f.label :profile, "資格", class: "label-text optional" %><br />
          <%= f.text_area :profile, class: "form__text" %>
        </div>

        <div class="actions">
          <%= f.submit "更新する", class: "form__btn" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
