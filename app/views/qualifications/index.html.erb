<main class="main">
  <div class="container">
    <%= search_form_for @q, html: { class: "search-form" } do |f| %>
      <div class="row">
        <div class="col-md-8">
          <%= f.search_field :name_cont, class: "form-control", placeholder: "資格名で検索" %>
        </div>
        <div class="col-md-4">
          <%= f.submit "検索", class: "btn btn-primary btn-block" %>
        </div>
      </div>
    <% end %>

    <div class="qualifications">
      <div class="qualifications-header text-center my-4">
        <h2>資格情報一覧</h2>
      </div>
      <div class="qualifications-list row row-cols-1 row-cols-md-2 g-4">
        <% @qualifications.each do |qualification| %>
          <div class="col">
            <%= link_to qualification_path(qualification), class: "text-decoration-none text-dark" do %>
              <div class="card h-100">
                <div class="card-body">
                  <h5 class="card-title"><%= qualification.name %></h5>
                  <p class="card-text"><%= qualification.description %></p>
                </div>
              </div>
            <% end %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</main>
