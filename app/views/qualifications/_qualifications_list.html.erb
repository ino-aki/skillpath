<!-- app/views/qualifications/_qualifications_list.html.erb -->
<div class="qualifications-header text-center my-4">
  <h2>資格試験一覧</h2>
</div>
<div class="qualifications-list row row-cols-1 row-cols-md-2 g-4">
  <% qualifications.each do |qualification| %>
    <div class="col">
      <%= link_to qualification_path(qualification), class: "text-decoration-none text-dark" do %>
        <div class="card h-100">
          <div class="card-body">
            <h5 class="card-title"><%= qualification.name %></h5>
            <p class="card-text"><%= qualification.description %></p>
          </div>
        </div>
      <% end %>
    </div>
  <% end %>
</div>
